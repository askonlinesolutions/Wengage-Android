<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context="com.askonlinesolutions.wengage.Fragment.Main.venue.VenueHomeFragment">

    <!-- TODO: Update blank fragment layout -->

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/bg_1" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white">

        <com.askonlinesolutions.wengage.CustomTexts.CustomTextViewBold
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:background="@color/E7E7E7"
            android:gravity="center"
            android:singleLine="true"
            android:text="profile"
            android:textAllCaps="true"
            android:textColor="@color/text_color"
            android:textSize="13dp"
            android:visibility="visible" />

        <LinearLayout
            android:id="@+id/home3_cross"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_cross"
                tools:ignore="VectorDrawableCompat" />

        </LinearLayout>

    </RelativeLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/_50sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/background"
                    android:orientation="vertical"
                    android:paddingTop="15dp"
                    android:paddingBottom="10dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="100dp">

                        <com.askonlinesolutions.wengage.CustomTexts.CustomTextViewRegular
                            android:id="@+id/folowers"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_marginLeft="10dp"
                            android:text="1,000 FOLLOWERS"
                            android:textColor="@color/text_color_tab"
                            android:textSize="12sp" />

                        <RelativeLayout
                            android:layout_width="110dp"
                            android:layout_height="110dp"
                            android:layout_centerInParent="true">

                            <ImageView
                                android:id="@+id/profile_icon"
                                android:layout_width="@dimen/_78sdp"
                                android:layout_height="@dimen/_80sdp"
                                android:layout_centerHorizontal="true"
                                android:layout_gravity="center"
                                android:background="@drawable/pink_circle"
                                android:padding="3dp"
                                android:visibility="visible"
                                tools:ignore="VectorDrawableCompat" />


                            <com.askonlinesolutions.wengage.utils.CircleImageView
                                android:id="@+id/userImage"
                                android:layout_width="@dimen/_68sdp"
                                android:layout_height="@dimen/_68sdp"
                                android:layout_centerInParent="true"
                                android:layout_centerHorizontal="true"
                                android:layout_gravity="center" />

                            <FrameLayout
                                android:layout_width="90dp"
                                android:layout_height="95dp"
                                android:layout_gravity="center"
                                android:visibility="gone">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:padding="2dp"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/load" />

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/frame" />

                            </FrameLayout>

                            <ImageView
                                android:id="@+id/home_3_check"
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentBottom="true"
                                android:layout_marginRight="3dp"
                                android:visibility="visible"
                                app:srcCompat="@drawable/ic_check" />

                            <ImageView
                                android:id="@+id/home_3_camera"
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentBottom="true"
                                android:layout_marginRight="3dp"
                                android:src="@drawable/camera_drawable"
                                android:visibility="gone" />

                        </RelativeLayout>

                        <com.askonlinesolutions.wengage.CustomTexts.CustomTextViewBold
                            android:id="@+id/connectTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="15dp"
                            android:background="@drawable/shape_border_blue"
                            android:paddingLeft="15dp"
                            android:paddingTop="5dp"
                            android:paddingRight="15dp"
                            android:paddingBottom="5dp"
                            android:text="FOLLOW"
                            android:textColor="@color/theme_blue"
                            android:textSize="12sp"
                            android:visibility="visible"
                            app:srcCompat="@drawable/ic_edit" />

                        <ImageView
                            android:id="@+id/home3_edit_profile"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="15dp"
                            android:paddingLeft="15dp"
                            android:paddingTop="5dp"
                            android:paddingRight="15dp"
                            android:paddingBottom="5dp"
                            android:textColor="@color/theme_blue"
                            android:textSize="12sp"
                            android:visibility="gone"
                            app:srcCompat="@drawable/ic_edit" />

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <com.askonlinesolutions.wengage.CustomTexts.CustomTextViewBold
                            android:id="@+id/userName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:inputType="textCapWords"
                            android:text="MEG, "
                            android:textColor="@color/text_color"
                            android:textSize="20sp" />

                        <com.askonlinesolutions.wengage.CustomTexts.CustomTextViewItalic
                            android:id="@+id/userLocation"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="bottom"
                            android:inputType="textCapWords"
                            android:text="fdgfdgdfgd"
                            android:textAlignment="center"
                            android:textSize="@dimen/size_16"
                            android:textStyle="italic" />

                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingLeft="10dp">


                        <LinearLayout
                            android:id="@+id/home3_arrow_1"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_alignParentRight="true"
                            android:gravity="center_horizontal"
                            android:paddingLeft="15dp"
                            android:paddingTop="8dp"
                            android:paddingRight="15dp"
                            android:visibility="gone">

                            <ImageView
                                android:id="@+id/home3_image_arrow_1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:visibility="visible"
                                app:srcCompat="@drawable/arrow_down" />


                        </LinearLayout>

                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/arrowDown"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical">

                        <com.askonlinesolutions.wengage.CustomTexts.CustomTextViewBold
                            android:id="@+id/headerProfileTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableRight="@drawable/arrow_up"
                            android:drawablePadding="15dp"
                            android:paddingLeft="10dp"
                            android:paddingTop="8dp"
                            android:paddingBottom="8dp"
                            android:text="Rakhi's Info"
                            android:textColor="@color/colorAccent"
                            android:textSize="@dimen/_14sdp" />

                        <LinearLayout
                            android:id="@+id/profileLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <com.askonlinesolutions.wengage.CustomTexts.CustomTextViewRegular
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:text="The Name You Go By"
                                android:textColor="@color/text_color"
                                android:textSize="@dimen/_14sdp" />

                            <com.askonlinesolutions.wengage.CustomTexts.CustomTextViewRegular
                                android:id="@+id/userNamesTv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:text="Jenny"
                                android:textColor="@color/text_color_meg"
                                android:textSize="@dimen/_13sdp" />

                            <com.askonlinesolutions.wengage.CustomTexts.CustomTextViewRegular
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_8sdp"
                                android:text="Date Of Birth"
                                android:textColor="@color/text_color"
                                android:textSize="@dimen/_14sdp" />

                            <com.askonlinesolutions.wengage.CustomTexts.CustomTextViewRegular
                                android:id="@+id/dobTv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:text="Jenny"
                                android:textColor="@color/text_color_meg"
                                android:textSize="@dimen/_13sdp" />

                            <com.askonlinesolutions.wengage.CustomTexts.CustomTextViewRegular
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_8sdp"
                                android:text="Income Level"
                                android:textColor="@color/text_color"
                                android:textSize="@dimen/_14sdp" />

                            <com.askonlinesolutions.wengage.CustomTexts.CustomTextViewRegular
                                android:id="@+id/incomeLevelTv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:text="Jenny"
                                android:textColor="@color/text_color_meg"
                                android:textSize="@dimen/_13sdp" />

                            <com.askonlinesolutions.wengage.CustomTexts.CustomTextViewRegular
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_8sdp"
                                android:text="City Of Residence"
                                android:textColor="@color/text_color"
                                android:textSize="@dimen/_14sdp" />

                            <com.askonlinesolutions.wengage.CustomTexts.CustomTextViewRegular
                                android:id="@+id/residenceCityTv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:text="Jenny"
                                android:textColor="@color/text_color_meg"
                                android:textSize="@dimen/_13sdp" />

                            <com.askonlinesolutions.wengage.CustomTexts.CustomTextViewRegular
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_8sdp"
                                android:text="In Your Own Word"
                                android:textColor="@color/text_color"
                                android:textSize="@dimen/_14sdp" />

                            <com.askonlinesolutions.wengage.CustomTexts.CustomTextViewRegular
                                android:id="@+id/inYourOwnWordTv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:text="Jenny"
                                android:textColor="@color/text_color_meg"
                                android:textSize="@dimen/_13sdp" />

                            <com.askonlinesolutions.wengage.CustomTexts.CustomTextViewRegular
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_8sdp"
                                android:text="Home Town"
                                android:textColor="@color/text_color"
                                android:textSize="@dimen/_14sdp" />

                            <com.askonlinesolutions.wengage.CustomTexts.CustomTextViewRegular
                                android:id="@+id/homeTownTv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:text="Jenny"
                                android:textColor="@color/text_color_meg"
                                android:textSize="@dimen/_13sdp" />

                            <com.askonlinesolutions.wengage.CustomTexts.CustomTextViewRegular
                                android:id="@+id/languageTv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_8sdp"
                                android:text="Language Spoken"
                                android:textColor="@color/text_color"
                                android:textSize="@dimen/_14sdp" />

                            <com.askonlinesolutions.wengage.CustomTexts.CustomTextViewRegular
                                android:id="@+id/languagesTv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:text="Jenny"
                                android:textColor="@color/text_color_meg"
                                android:textSize="@dimen/_13sdp" />

                            <com.askonlinesolutions.wengage.CustomTexts.CustomTextViewRegular
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_8sdp"
                                android:text="Favorite City In the World"
                                android:textColor="@color/text_color"
                                android:textSize="@dimen/_14sdp" />

                            <com.askonlinesolutions.wengage.CustomTexts.CustomTextViewRegular
                                android:id="@+id/favCityTv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:text="Jenny"
                                android:textColor="@color/text_color_meg"
                                android:textSize="@dimen/_13sdp" />

                            <com.askonlinesolutions.wengage.CustomTexts.CustomTextViewRegular
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_8sdp"
                                android:text="Favorite Restaurent"
                                android:textColor="@color/text_color"
                                android:textSize="@dimen/_14sdp" />

                            <com.askonlinesolutions.wengage.CustomTexts.CustomTextViewRegular
                                android:id="@+id/favRestaurentTv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:text="Jenny"
                                android:textColor="@color/text_color_meg"
                                android:textSize="@dimen/_13sdp" />

                            <com.askonlinesolutions.wengage.CustomTexts.CustomTextViewRegular
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_8sdp"
                                android:text="With an extra hour"
                                android:textColor="@color/text_color"
                                android:textSize="@dimen/_14sdp" />

                            <com.askonlinesolutions.wengage.CustomTexts.CustomTextViewRegular
                                android:id="@+id/extraHourTv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:text="Jenny"
                                android:textColor="@color/text_color_meg"
                                android:textSize="@dimen/_13sdp" />

                            <com.askonlinesolutions.wengage.CustomTexts.CustomTextViewRegular
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_8sdp"
                                android:text="Your Work and/or Your Passion"
                                android:textColor="@color/text_color"
                                android:textSize="@dimen/_14sdp" />

                            <com.askonlinesolutions.wengage.CustomTexts.CustomTextViewRegular
                                android:id="@+id/yourWorkTv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:text="Jenny"
                                android:textColor="@color/text_color_meg"
                                android:textSize="@dimen/_13sdp" />

                            <com.askonlinesolutions.wengage.CustomTexts.CustomTextViewRegular
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_8sdp"
                                android:text="Social Media Handle"
                                android:textColor="@color/text_color"
                                android:textSize="@dimen/_14sdp" />

                            <com.askonlinesolutions.wengage.CustomTexts.CustomTextViewRegular
                                android:id="@+id/socialMediaTv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:text="Jenny"
                                android:textColor="@color/text_color_meg"
                                android:textSize="@dimen/_13sdp" />
                        </LinearLayout>


                        <ImageView
                            android:id="@+id/home_3_middle_image"
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:layout_marginRight="15dp"
                            android:paddingBottom="5dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/images"
                            android:visibility="gone" />

                    </LinearLayout>

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp">

                    <com.askonlinesolutions.wengage.CustomTexts.CustomTextViewBold
                        android:id="@+id/home_3_profile_text"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:gravity="center"
                        android:paddingLeft="10dp"
                        android:text="Meg's Preferences"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/size_16" />


                </RelativeLayout>

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/home3_favorites"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/home3_favoritesEvent"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="gone" />

                    </LinearLayout>

                </ScrollView>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp">

                    <com.askonlinesolutions.wengage.CustomTexts.CustomTextViewBold
                        android:id="@+id/tv_venue"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="VENUES"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/size_13" />

                    <View
                        android:layout_width="1.5dp"
                        android:layout_height="match_parent"
                        android:background="@color/meg" />

                    <com.askonlinesolutions.wengage.CustomTexts.CustomTextViewBold
                        android:id="@+id/tv_event"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="EVENTS"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/size_13" />

                    <View
                        android:layout_width="1.5sp"
                        android:layout_height="match_parent"
                        android:background="@color/meg" />

                    <LinearLayout
                        android:id="@+id/home3_bottom_three"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/iv_heart"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            app:srcCompat="@drawable/ic_favorites" />

                    </LinearLayout>

                    <View
                        android:layout_width="1.5sp"
                        android:layout_height="match_parent"
                        android:background="@color/meg" />

                    <LinearLayout
                        android:id="@+id/home3_bottom_four"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center">

                        <com.askonlinesolutions.wengage.CustomTexts.CustomTextViewBold
                            android:id="@+id/tv_custom"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="CUSTOM"
                            android:textSize="@dimen/size_13" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:background="@color/meg" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/profile_home_recycler_venues"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:scrollbars="none"
                android:visibility="gone" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/home3_recycler_events"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:scrollbars="none"
                android:visibility="gone" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/home3_recycler_heart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:fitsSystemWindows="true"
                android:scrollbars="none"
                android:visibility="gone" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/home3_recycler_custom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:fitsSystemWindows="true"
                android:scrollbars="none"
                android:visibility="gone" />


        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</LinearLayout>
