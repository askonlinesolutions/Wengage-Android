<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/size_10"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/size_10"
        android:paddingTop="@dimen/size_2"
        android:paddingRight="@dimen/size_10"
        android:paddingBottom="@dimen/size_2">

        <com.askonlinesolutions.wengage.utils.CircleImageView
            android:id="@+id/item_my_contacts_image"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:src="@drawable/profileg" />


        <com.askonlinesolutions.wengage.CustomTexts.CustomTextViewRegular
            android:id="@+id/item_my_contacts_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/size_10"
            android:layout_marginTop="@dimen/size_10"
            android:layout_toRightOf="@+id/item_my_contacts_image"
            android:text="Kelly"
            android:textColor="@color/text_color"
            android:textSize="@dimen/size_16" />

        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="bottom"
        android:background="@color/view" />

</LinearLayout>