<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/size_10">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/size_5"
        android:paddingBottom="@dimen/size_5"
        android:paddingRight="@dimen/size_10"
        android:paddingLeft="@dimen/size_10"
        android:layout_marginBottom="@dimen/size_10">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/item_call_image"
            android:src="@drawable/profile"
            android:layout_alignParentLeft="true"/>


        <LinearLayout
            android:id="@+id/caller_details"
            android:layout_toRightOf="@+id/item_call_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:layout_centerInParent="true">

            <com.askonlinesolutions.wengage.CustomTexts.CustomTextViewRegular
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/item_call_name"
                android:text="Kelly"
                android:textSize="@dimen/size_16"
                android:textColor="@color/text_color"
                />




        </LinearLayout>



        <LinearLayout
            android:id="@+id/button_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible"
            android:layout_centerInParent="true"
            android:layout_alignParentRight="true"
            android:baselineAligned="true"
            android:layout_marginTop="10dp"
            >

            <Button
                android:id="@+id/accept_button"
                android:layout_width="70dp"
                android:layout_height="20dp"
                android:text="accept"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="5dp"
                android:textSize="9sp"
                android:background="@drawable/button_shape_green"
                />

            <Button
                android:id="@+id/decline_button"
                android:layout_width="70dp"
                android:layout_height="20dp"
                android:text="Decline"
                android:textSize="9sp"
                android:layout_alignParentRight="true"
                android:background="@drawable/button_shape_red"
                />

        </LinearLayout>



        <Button
            android:id="@+id/request_pending"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:text="Request Pending"
            android:visibility="gone"
            android:textSize="9sp"
            android:layout_centerInParent="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/button_shape_yellow"/>



    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/view"
        android:layout_gravity="bottom"/>

</LinearLayout>