<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginBottom="20dp"
            android:scaleType="fitXY"
            android:src="@drawable/welcome_image" />

        <LinearLayout
            android:id="@+id/text_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/logo"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <com.askonlinesolutions.wengage.CustomTexts.CustomTextViewRegular
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:alpha=".72"
                android:text="@string/second_intro_screen_text"
                android:textSize="@dimen/size_18" />

            <com.askonlinesolutions.wengage.CustomTexts.CustomTextViewRegular
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Connect to chat ."
                android:alpha=".72"
                android:layout_marginTop="20dp"
                android:textSize="@dimen/size_18" />

            <com.askonlinesolutions.wengage.CustomTexts.CustomTextViewRegular
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Make a plan ."
                android:alpha=".72"
                android:layout_marginTop="20dp"
                android:textSize="@dimen/size_18" />

            <com.askonlinesolutions.wengage.CustomTexts.CustomTextViewBlack
                android:id="@+id/next"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/shape_button"
                android:layout_margin="25dp"
                android:text="Next"
                android:gravity="center"
                android:onClick="nextScreen"
                android:textColor="@color/white" />
        </LinearLayout>



    </RelativeLayout>
</ScrollView>