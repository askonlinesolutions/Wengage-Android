<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_height="wrap_content"
       >



        <RelativeLayout
            android:id="@+id/rr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <!--<RelativeLayout-->
            <!--android:layout_width="110dp"-->
            <!--android:layout_height="110dp"-->
            <!--android:layout_centerInParent="true">-->

            <ImageView
                android:id="@+id/profile_icon"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_centerInParent="true"
                android:background="@drawable/pink_circle"
                android:padding="3dp"
                android:visibility="visible"
                tools:ignore="VectorDrawableCompat" />


            <com.askonlinesolutions.wengage.utils.CircleImageView
                android:id="@+id/item_my_contacts_image"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_centerInParent="true"
                />


            <!--</RelativeLayout>-->

        </RelativeLayout>



        <!--<com.askonlinesolutions.wengage.utils.CircleImageView-->
            <!--android:id="@+id/item_my_contacts_image"-->
            <!--android:layout_width="@dimen/_40sdp"-->
            <!--android:layout_height="@dimen/_40sdp"-->
            <!--app:civ_border_color="@color/colorPrimary"-->
            <!--app:civ_border_width="@dimen/_2sdp"-->
            <!--android:src="@drawable/profileg" />-->


        <com.askonlinesolutions.wengage.CustomTexts.CustomTextViewRegular
            android:id="@+id/item_my_contacts_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/size_10"
            android:layout_marginTop="@dimen/size_10"
            android:layout_toRightOf="@+id/rr"
            android:text="Kelly"
            android:textColor="@color/text_color"
            android:textSize="@dimen/size_16" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="bottom"
        android:layout_marginTop="@dimen/_5sdp"
        android:background="@color/view" />

</LinearLayout>