<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="225dp"
    android:background="@color/background"
    android:paddingBottom="@dimen/size_5">

    <ImageView
        android:id="@+id/item_your_interest_list_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/event_list_2" />

    <!--
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_50"
            android:background="@color/black"
            android:alpha=".4"
            android:layout_alignParentBottom="true"/>
    -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:layout_alignParentBottom="true"
        android:alpha="0.3"
        android:background="@color/black">

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_margin="5dp"
            android:orientation="vertical">

            <com.askonlinesolutions.wengage.CustomTexts.CustomTextViewBold
                android:id="@+id/item_your_interest_list_name"
                android:layout_width="@dimen/_130sdp"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="Wicked"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <RatingBar
                    android:id="@+id/event_rating_bar"
                    style="@style/Base.Widget.AppCompat.RatingBar.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <com.askonlinesolutions.wengage.CustomTexts.CustomTextViewRegular
                    android:id="@+id/item_your_interest_list_reviews"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:text="30 Reviews"
                    android:textColor="@color/text_color_tab"
                    android:textSize="10sp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/item_your_interest_list_bookmarks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="5dp"
                app:srcCompat="@drawable/ic_favorites_white_1" />

            <com.askonlinesolutions.wengage.CustomTexts.CustomTextViewBold
                android:id="@+id/item_your_interest_list_interested"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="5dp"
                android:background="@drawable/shape_round_bg_2"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:paddingRight="10dp"
                android:paddingBottom="5dp"
                android:text="Interested"
                android:textColor="@color/text_color"
                android:textSize="10dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/item_your_interest_list_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="0dp"
                app:srcCompat="@drawable/ic_check" />

            <ImageView
                android:id="@+id/item_your_interest_list_butterfly"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                app:srcCompat="@drawable/icon_our_picks" />

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>