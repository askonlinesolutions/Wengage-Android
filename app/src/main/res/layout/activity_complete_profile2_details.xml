<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    tools:context=".Activity.CompleteProfile2Details">


    <ImageView
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:onClick="onClickBack"
        android:padding="5dp"
        app:srcCompat="@drawable/ic_left_arrow" />

    <com.askonlinesolutions.wengage.CustomTexts.CustomTextViewRegular
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/back"
        android:gravity="center_horizontal"
        android:padding="10dp"
        android:text="Your Preferences At \nA Glance "
        android:textColor="@color/black"
        android:textSize="@dimen/size_18" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/category_datail_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/next"
        android:layout_below="@+id/text"
        android:layout_marginLeft="10dp" />

    <com.askonlinesolutions.wengage.CustomTexts.CustomTextViewBlack
        android:id="@+id/next"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/shape_button"
        android:gravity="center"
        android:onClick="profile_details_next"
        android:text="Done"
        android:textColor="#ffffff" />

</RelativeLayout>