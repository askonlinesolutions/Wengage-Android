<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Fragment.EditPreferenceFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:id="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:background="@color/white">

        <com.askonlinesolutions.wengage.CustomTexts.CustomTextViewBold
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:background="@color/E7E7E7"
            android:gravity="center"
            android:singleLine="true"
            android:text="Preferences"
            android:textAllCaps="true"
            android:textColor="@color/text_color"
            android:textSize="13dp"
            android:visibility="visible" />

        <LinearLayout
            android:id="@+id/home3_cross"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_cross"
                tools:ignore="VectorDrawableCompat" />

        </LinearLayout>

    </RelativeLayout>

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:layout_below="@+id/ll1"
        android:background="@color/gray" />

    <RelativeLayout
        android:id="@+id/tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view1"
        android:layout_marginTop="@dimen/_5sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:orientation="horizontal"
            android:weightSum="2">

            <com.askonlinesolutions.wengage.CustomTexts.CustomTextViewBlack
                android:id="@+id/venueTV"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_weight="1"
                android:background="@drawable/edit_drawable"
                android:gravity="center"
                android:text="Venue"
                android:textColor="@color/text_color" />

            <com.askonlinesolutions.wengage.CustomTexts.CustomTextViewBlack
                android:id="@+id/eventTv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:layout_weight="1"
                android:background="@drawable/edit_drawable"
                android:gravity="center"
                android:text="Event"
                android:textColor="@color/text_color" />

        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tab"
        android:layout_marginBottom="@dimen/_60sdp">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            android:visibility="gone" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/eventRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            android:visibility="gone" />

    </RelativeLayout>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:layout_alignParentBottom="true"
    android:layout_margin="@dimen/_20sdp">
    <com.askonlinesolutions.wengage.CustomTexts.CustomTextViewBlack
        android:id="@+id/updateForVenue"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/shape_button"
        android:gravity="center"
        android:text="Update"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:visibility="visible" />
    <com.askonlinesolutions.wengage.CustomTexts.CustomTextViewBlack
        android:id="@+id/updateForEvent"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/shape_button"
        android:gravity="center"
        android:text="Update"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:visibility="visible" />

</RelativeLayout>

</RelativeLayout>