<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    tools:context=".Fragment.Sub.MyInvitationFragment"
    android:paddingRight="@dimen/size_10"
    android:paddingLeft="@dimen/size_10">
    <!-- TODO: Update blank fragment layout -->

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/item_my_invitation_image"
        android:src="@drawable/profile"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"/>

    <com.askonlinesolutions.wengage.CustomTexts.CustomTextViewRegular
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/item_my_invitation_name"
        android:text="Kelly"
        android:textSize="@dimen/size_16"
        android:textColor="@color/text_color"
        android:layout_marginLeft="@dimen/size_10"
        android:layout_marginTop="@dimen/size_10"
        android:layout_toRightOf="@+id/item_my_invitation_image"
        android:layout_centerVertical="true"/>

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/item_my_invitation_image_right"
        android:src="@drawable/ic_verified"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"/>

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/item_my_invitation_image_cross"
        android:src="@drawable/ic_error"
        android:layout_marginRight="@dimen/size_10"
        android:layout_toLeftOf="@+id/item_my_invitation_image_right"
        android:layout_centerVertical="true"/>

    <View
        android:layout_width="match_parent"
        android:layout_height=".5dp"
        android:background="@color/view"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>