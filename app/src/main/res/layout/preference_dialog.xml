<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="145dp"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/_27sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginEnd="@dimen/_15sdp"
        android:background="@drawable/shape_border_error"
        android:orientation="vertical">
        <!--android:background="@drawable/shape_border_error"-->

        <com.askonlinesolutions.wengage.CustomTexts.CustomTextViewRegular
            android:id="@+id/dialog_error_msg"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:gravity="center"
            android:textSize="@dimen/_12sdp"
            android:text="Note! You haven't selected in all categories. Are you sure you want to move on ?"
            android:textColor="@color/text_color" />

        <View
            android:layout_width="match_parent"
            android:layout_height=".5dp"
            android:background="@color/lightGrey" />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:weightSum="2"
    android:orientation="horizontal">
    <com.askonlinesolutions.wengage.CustomTexts.CustomTextViewRegular
        android:id="@+id/no"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:padding="10dp"
        android:text="No"
        android:textColor="@color/text_color_meg" />
    <com.askonlinesolutions.wengage.CustomTexts.CustomTextViewRegular
        android:id="@+id/yes"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:padding="10dp"
        android:text="Yes"
        android:textColor="@color/text_color_meg" />

</LinearLayout>

    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_7sdp"
        android:rotation="45"
        app:srcCompat="@drawable/ic_butterfly" />

</RelativeLayout>