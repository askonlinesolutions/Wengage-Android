<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="false">
        <shape android:shape="rectangle">
            <corners android:radius="5dp"/>
            <gradient android:startColor="@color/bg_category_top"
                android:endColor="@color/bg_category_top"
                android:centerColor="@color/bg_category_top"></gradient>
            <stroke android:color="@color/bg_category_top" android:width="1dp"></stroke>
        </shape>
    </item>
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <corners android:radius="5dp"/>
            <gradient android:startColor="@color/colorAccent"
                android:endColor="@color/colorAccent"
                android:centerColor="@color/colorAccent"></gradient>
            <stroke android:color="@color/colorAccent" android:width="1dp"></stroke>
        </shape>
    </item>
</selector>